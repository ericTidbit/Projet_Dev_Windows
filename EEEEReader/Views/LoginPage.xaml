<Page
    x:Class="EEEEReader.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EEEEReader.Views">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="360" Spacing="12">
            <TextBlock Text="Connection" FontSize="44" FontWeight="SemiBold" TextAlignment="Center" Margin="0,12"/>
            <TextBlock Text="Nom d'utilisateur"/>
            <TextBox x:Name="UserNameBox"/>
            <TextBlock Text="Mot de passe"/>
            <PasswordBox x:Name="PasswordBox"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="175">
				<Button Content="Valider" Click="OnLoginClick" />
				<Button Content="Inscription" Click="OnRegisterClick" />
			</StackPanel>
            
        </StackPanel>
    </Grid>
</Page>