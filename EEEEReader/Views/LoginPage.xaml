<Page
    x:Class="EEEEReader.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EEEEReader.Views">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="360" Spacing="12">
            <TextBlock Text="Sign in" FontSize="24" FontWeight="SemiBold"/>
            <TextBlock Text="Username"/>
            <TextBox x:Name="UserNameBox"/>
            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordBox"/>
            <Button Content="Sign in" Click="OnLoginClick" />
        </StackPanel>
    </Grid>
</Page>