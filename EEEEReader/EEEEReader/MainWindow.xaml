<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="EEEEReader.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EEEEReader"
    xmlns:vm="using:EEEEReader.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="EEEEReader">

    <Grid>
        <Grid.DataContext>
            <vm:MainViewModel />
        </Grid.DataContext>
        
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,110,0,0"
                 Text="{Binding TexteEntree, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        
        <Button Content="Envoyer" HorizontalAlignment="Center" VerticalAlignment="Center"
                Command="{Binding CommandeEnvoyer}"/>
        <TextBlock TextAlignment="Center" VerticalAlignment="Bottom"
                   Text="{Binding TexteAffiche}"/>
    </Grid>
</Window>
